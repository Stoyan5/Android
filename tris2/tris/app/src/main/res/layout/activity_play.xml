<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityGioco1V1"
    tools:context="stoyan.tris.Play">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="VS"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/ac"
        android:layout_alignParentTop="true"
        android:text="O"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp"
        android:layout_alignRight="@+id/ac" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="95dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/aa"
        android:text="X"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50dp"
        android:layout_alignLeft="@+id/aa" />

    <Button
        android:id="@+id/aa"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/bb"
        android:layout_toStartOf="@+id/ab"
        android:onClick="execute"
        android:tag="0"
        android:textSize="50dp"
        android:layout_toLeftOf="@+id/ab" />

    <Button
        android:id="@+id/ab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:onClick="execute"
        android:tag="1"
        android:textSize="50dp" />

    <Button
        android:id="@+id/ac"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/textView7"
        android:layout_toEndOf="@+id/ab"
        android:layout_toRightOf="@+id/ab"
        android:onClick="execute"
        android:tag="2"
        android:textSize="50dp" />

    <Button
        android:id="@+id/ba"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignEnd="@+id/aa"
        android:layout_below="@+id/aa"
        android:onClick="execute"
        android:tag="3"
        android:textSize="50dp"
        android:layout_alignRight="@+id/aa" />

    <Button
        android:id="@+id/bb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ab"
        android:layout_centerHorizontal="true"
        android:onClick="execute"
        android:tag="4"
        android:textSize="50dp" />

    <Button
        android:id="@+id/bc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ab"
        android:layout_toEndOf="@+id/bb"
        android:layout_toRightOf="@+id/bb"
        android:onClick="execute"
        android:tag="5"
        android:textSize="50dp" />

    <Button
        android:id="@+id/ca"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/textView7"
        android:layout_below="@+id/ba"
        android:onClick="execute"
        android:tag="6"
        android:textSize="50dp"
        android:layout_alignLeft="@+id/textView7" />

    <Button
        android:id="@+id/cb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/bb"
        android:layout_centerHorizontal="true"
        android:onClick="execute"
        android:tag="7"
        android:textSize="50dp" />

    <Button
        android:id="@+id/cc"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/ba"
        android:layout_toEndOf="@+id/resultView"
        android:onClick="execute"
        android:tag="8"
        android:textSize="50dp"
        android:layout_toRightOf="@+id/resultView" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:text="New Text"
        android:textSize="25dp" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:onClick="resetGame"
        android:text="Reset" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:id="@+id/view"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/player2Score"
        android:layout_alignBottom="@+id/view"
        android:layout_toEndOf="@+id/view"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/view" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/player1Score"
        android:layout_alignBottom="@+id/view"
        android:layout_toStartOf="@+id/view"
        android:textSize="30dp"
        android:layout_toLeftOf="@+id/view" />

</RelativeLayout>
